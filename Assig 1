Task 2:

#include <iostream>
using namespace std;

int main() {
    int a, b, c, d, n1, n2, n3, n4;

    cout << "Enter a 4-digit number: ";
    cin >> a;

    n1 = a % 10;
    n1++;
    b = a / 10;
    n2 = b % 10;
    n2++;
    c = b / 10;
    n3 = c % 10;
    n3++;
    d = c / 10;
    n4 = d % 10;
    n4++;

    cout << "The result is: " << n4 << n3 << n2 << n1 << endl;

    return 0;
}


